{
    "name": "joomla/form",
    "type": "joomla-package",
    "description": "Joomla Form Package",
    "keywords": ["joomla", "framework", "form"],
    "homepage": "https://github.com/joomla-framework/form",
    "license": "GPL-2.0+",
    "require": {
        "php": "^5.3.10|~7.0",
        "joomla/language": "~1.3",
        "joomla/string": "~1.3",
        "joomla/uri": "~1.0",
        "joomla/filter": "~1.0",
        "joomla/filesystem": "~1.0",
        "joomla/registry": "^1.4.5",
        "joomla/utilities": "^1.3.3"
    },
    "require-dev": {
        "joomla/database": "~1.0",
        "joomla/test": "~1.0",
        "phpunit/phpunit": "~4.8|>=5.0 <5.4",
        "phpunit/dbunit": "~1.3",
        "squizlabs/php_codesniffer": "1.*"
    },
    "suggest": {
        "joomla/database": "Install joomla/database if you would like to use the DatabaseConnection field type."
    },
    "target-dir": "Joomla/Form",
    "autoload": {
        "psr-0": {
            "Joomla\\Form": ""
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Joomla\\Form\\Tests": "Tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-1.x-dev": "1.x-dev"
        }
    }
}
